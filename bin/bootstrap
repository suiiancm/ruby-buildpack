#!/usr/bin/env ruby

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

DEFAULT_STACK = "cedar-14"

bootstrap_ruby_dir = Dir.mktmpdir
installer    = LanguagePack::Installers::MriInstaller.new(ENV['STACK'] || DEFAULT_STACK)
ruby_version = LanguagePack::RubyVersion.new("ruby-#{LanguagePack::RubyVersion::DEFAULT_VERSION_NUMBER}")
installer.fetch_unpack(ruby_version, bootstrap_ruby_dir)
print bootstrap_ruby_dir
